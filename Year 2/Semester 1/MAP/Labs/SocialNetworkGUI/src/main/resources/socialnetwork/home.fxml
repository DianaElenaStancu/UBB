<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socialnetwork.controllers.HomeController">
   <children>
      <VBox layoutY="-2.0" prefHeight="500.0" prefWidth="1001.0">
         <children>
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="997.0" spacing="10.0">
               <children>
                  <TextField fx:id="searchUserTextField" promptText="Search user">
                     <HBox.margin>
                        <Insets right="150.0" />
                     </HBox.margin>
                  </TextField>
                  <CheckBox fx:id="requestsCheckBox" mnemonicParsing="false" onAction="#requestsCheckBoxClicked" text="Requests" textFill="#e40fc4" />
                  <CheckBox fx:id="allUsersCheckBox" mnemonicParsing="false" onAction="#allUsersCheckBoxClicked" text="All users" textFill="#e40fc4" />
                  <Button fx:id="accountSettingsButton" mnemonicParsing="false" onAction="#accountSettingsButtonClicked" text="Account Settings" textFill="#e40fc4">
                     <HBox.margin>
                        <Insets left="150.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="logOutButton" mnemonicParsing="false" onAction="#logOutButtonClicked" text="Log out" textFill="#e40fc4" />
               </children>
            </HBox>
            <TableView fx:id="usersTableView" prefHeight="386.0" prefWidth="966.0">
               <columns>
                  <TableColumn fx:id="usernameTableColumn" prefWidth="143.0" text="username" />
                  <TableColumn fx:id="firstNameTableColumn" prefWidth="173.0" text="first name" />
                  <TableColumn fx:id="lastNameTableColumn" prefWidth="195.0" text="last name" />
                  <TableColumn fx:id="emailTableColumn" minWidth="0.0" prefWidth="188.70538330078125" text="email" />
                  <TableColumn fx:id="dateTableColumn" minWidth="0.0" prefWidth="167.79461669921875" text="date" />
                  <TableColumn fx:id="statusTableColumn" minWidth="0.0" prefWidth="132.5" text="status" />
               </columns>
            </TableView>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#addButtonClicked" text="Add" textFill="#e40fc4" />
                  <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeButtonClicked" text="Remove" textFill="#e40fc4" />
                  <Button fx:id="chatButton" mnemonicParsing="false" onAction="#chatButtonClicked" text="Chat" textFill="#e40fc4" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
