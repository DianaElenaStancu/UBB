<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="340.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socialnetwork.controllers.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="340.0" prefWidth="320.0" spacing="30.0">
         <children>
            <Label text="Hello!">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTextField" promptText="username">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <PasswordField fx:id="passwordTextField" promptText="password">
               <font>
                  <Font size="15.0" />
               </font>
            </PasswordField>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonClicked" text="Log in">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Don't have an account?">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
                  <Hyperlink fx:id="registerHyperlink" onAction="#registerHyperlinkClicked" text="Please Register" />
               </children>
               <padding>
                  <Insets bottom="1.0" left="1.0" right="1.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
